<div class="px-20 py-10">
  <h1 class="text-3xl mb-10">People List</h1>
  <section>
    <table class="min-w-full divide-y divide-gray-200 shadow overflow-hidden border-b border-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Full Name
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Email
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Job Title
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @people.each do |person| %>
          <tr class="px-6 py-4 whitespace-nowrap">
            <td class="p-2"><%= person.display_name %></td>
            <td class="p-2"><%= person.email_address %></td>
            <td class="p-2"><%= person.title %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</div>
